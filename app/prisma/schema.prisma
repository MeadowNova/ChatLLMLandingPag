generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    // output = "/home/ubuntu/chatllm_landing_page/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model EmailSubscriber {
    id          String   @id @default(cuid())
    email       String   @unique
    name        String?
    signupDate  DateTime @default(now())
    source      String   @default("landing_page")
    status      String   @default("active")
    experience  String?  // Experience level: beginner, some-experience, experienced, business-owner
    interests   String[] // Array of interests
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@map("email_subscribers")
}
